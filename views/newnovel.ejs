<%include header%>
<div class="col-md-4 mx-auto" style="max-width: 1100px; max-height: 700px;">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva Novela</h3>
        </div>
        <div class="card-body">
            <form role="form" action="/newnovel" method="POST">
            <div class="form-group"> 
                <input type="text" name="title" class="form-control" placeholder="Title" autofocus> 
            </div>
            <div class="form-group">
                <textarea name="description" placeholder="Description" class="form-control"></textarea>
            </div>
            <div class="form-group"></div>
                <button class="btn btn-outline-success btn-block">
                Guardar novela</button>
            </button>
            </form>
        </div>
    </div>
</div>

<%include footer%>